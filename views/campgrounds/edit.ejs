<%- include("../partials/header") %>
 
<div class="container">
	
	<div class="row">
		
		<h1 style="text-align:center;">Edit <%= campground.name %></h1>
		
		<div style="width: 50%; margin: 30px auto;">
			
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				
				<div class="form-group"> 
					<label>Name*</label>
					<input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>" required> 
				</div>
				<div class="form-group">
					<label>Price/Night*</label>
					<input class="form-control" type="number" name="campground[price]" value="<%=campground.price %>"  min="0.01" step="0.01" required> 
				</div>
				<div class="form-group"> 
					<label>Image*</label>
					<input class="form-control" type="text" name="campground[image]" value="<%=campground.image %>" required> 
				</div>
				<div class="form-group">
					<label>Description*</label>
					<textarea class="form-control" rows="5" name="campground[description]" required ><%=campground.description %> </textarea> 
				</div>
				<div class="form-group"> 
					<label>Location*</label>
					<input class="form-control" type="text" name="campground[location]" value="<%=campground.location%>" required>
				</div>
				<div class="form-group"> 
					<label>Phone Number*</label>
					<input class="form-control" type="text" name="campground[phone]" value="<%=campground.phone %>"  required>
				</div>
				<div class="form-group"> 
					<label>Booking Window*</label>
					<input class="form-control" type="text" name="campground[start]" value="<%=campground.booking.start %>"  required> 
					<input class="form-control" type="text" name="campground[end]" value = "<%=campground.booking.end %>" required> 
				</div>
				<div class="form-group"> 
					<label>Amenities (atleast one*)</label>
					<input class="form-control" type="text" name="campground[tags]" value="<%= campground.tags %>" required>
				</div>
				<div class="form-group"> 
					<button class="btn btn-lg btn-primary btn-block">Submit!</button> 
				</div>
				
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	
	</div>
</div>
	
<%- include("../partials/footer") %>