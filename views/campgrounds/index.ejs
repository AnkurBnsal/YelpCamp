<%- include("../partials/header") %>


<div class="container">
	
	<header class="jumbotron Shadow">
		<div class="container">
			
			<h1>Welcome to <span>YelpCamp</span></h1>
			<p>View our camps from all over World..! </p>
			<!-- <button class="btn btn-primary " href="/campgrounds/new">Add New CampGround</button> -->
		
		</div>
	</header>
	
	<div class="row text-center allcamp">
		
		<% for(var i=0;i<arr.length;i++){ %>
			<div class="col-sm-12 col-md-6 col-lg-4" >
				<div class="thumbnail camp">
					<a href="/campgrounds/<%= arr[i]._id %>">
						<img src= "<%= arr[i].image %>">

						<div class="caption">
							<h3><%= arr[i].name %></h3>
						</div>
					</a>
					<!-- <p>
						<a href="/campgrounds/<%= arr[i]._id %>" class="btn btn-primary">More Info</a>
					</p> -->
				</div>
			</div>
		<% } %>
		
	</div>

</div>

<%- include("../partials/footer") %>