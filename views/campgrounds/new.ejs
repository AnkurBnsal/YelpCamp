<%- include("../partials/header") %>
 
<div class="container">
	
	<div class="row">
		
		<h1 class="text-center" >Create Campground </h1>
		
		<div style="width: 50%; margin: 30px auto;">
			
			<form action="/campgrounds" method="POST">
				
				<!-- <label>Username</label>
				<div class="input-group">
					<input class="form-control" type="text" name="username" placeholder="Username.." required>
				</div> -->
				
				<div class="form-group"> 
					<label>Name*</label>
					<input class="form-control" type="text" name="campground[name]" placeholder="Name" required> 
				</div>
				<div class="form-group">
					<label>Price/Night*</label>
					<input class="form-control" type="number" name="campground[price]" placeholder="Price (Rs.)" min="0.01" step="0.01" required> 
				</div>
				<div class="form-group"> 
					<label>Image*</label>
					<input class="form-control" type="text" name="campground[image]" placeholder="Image URL" required> 
				</div>
				<div class="form-group">
					<label>Description*</label>
					<textarea class="form-control" rows="5" name="campground[description]" required > </textarea> 
				</div>
				<div class="form-group"> 
					<label>Location*</label>
					<input class="form-control" type="text" name="campground[location]" placeholder="Location" required>
				</div>
				<div class="form-group"> 
					<label>Phone Number*</label>
					<input class="form-control" type="text" name="campground[phone]" placeholder="Phone Number" required>
				</div>
				<div class="form-group"> 
					<label>Booking Window*</label>
					<input class="form-control" type="text" name="campground[start]" placeholder="Starting Month" required> 
					<input class="form-control" type="text" name="campground[end]" placeholder="Ending Month" required> 
				</div>
				<div class="form-group"> 
					<label>Amenities (atleast one*)</label>
					<input class="form-control" type="text" name="campground[tags]" placeholder="Separated by comma, eg: tv, wifi, ac.." required> 
				</div>
				<div class="form-group"> 
					<button class="btn btn-lg btn-primary btn-block">Submit!</button> 
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	
	</div>
</div>
	
<%- include("../partials/footer") %>