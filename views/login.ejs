<%- include("partials/header") %>

<div class="container">
	
	<div class="row">
		
		<h2 class="Center">Login Page </h2>
		
		<div class="myform">
			<form action="/login" method="POST">
				
				<div class="form-group">
					<label>Username</label>
					<div class="input-group">
						<span class="input-group-addon"><i class="fas fa-user-alt"></i></span>
						<input class="form-control" type="text" name="username" placeholder="Username.." required>
					</div>
				</div>
				
				<div class="form-group">
					<label>Password</label>
					<div class="input-group">
						<span class="input-group-addon"><i class="fas fa-key"></i></span>
						<input class="form-control" type="password" name="password" placeholder="Password" required>
					</div>
				</div>
				
				<div class="form-group"> <button class="btn btn-lg btn-primary btn-block">Login!</button> </div>
				<a href="/campgrounds">Skip for now..</a>
			</form>
		</div>
	</div>	
</div>
		
